<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="155dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lib_book_card"
    android:layout_margin="7dp"
    app:cardCornerRadius="12dp"
    android:elevation="3dp"
    app:contentPadding="4dp"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/lib_card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pop_bg"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_bookImg_libcard"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp" />

        <TextView
            android:id="@+id/tv_title_libcard"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_bookImg_libcard"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="0dp"
            android:gravity="center_horizontal"
            android:inputType="textMultiLine"
            android:text="Title\n of the book"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_author_libcard"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_libcard"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="0dp"
            android:gravity="center_horizontal"
            android:text="Author"
            android:textAlignment="center"
            android:textSize="12sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>