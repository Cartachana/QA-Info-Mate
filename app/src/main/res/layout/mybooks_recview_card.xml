<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="2dp"
    android:paddingVertical="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_view_bg"
    android:padding="4dp"
    android:layout_marginTop="5dp">


    <ImageView
        android:id="@+id/iv_bookImage_mybooks"
        android:layout_width="119dp"
        android:layout_height="146dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_mybooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        android:text="Title"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_bookImage_mybooks"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_isavaiable_mybooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_author_mybooks"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:padding="3dp"
        android:text="Available"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_bookImage_mybooks"
        app:layout_constraintTop_toBottomOf="@+id/tv_category_mybooks" />

    <TextView
        android:id="@+id/tv_category_mybooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_isavaiable_mybooks"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:padding="3dp"
        android:text="Category"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_bookImage_mybooks"
        app:layout_constraintTop_toBottomOf="@+id/tv_author_mybooks" />

    <TextView
        android:id="@+id/tv_author_mybooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_book_sale"
        android:layout_gravity="center"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:padding="3dp"
        android:text="Author"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_bookImage_mybooks"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_mybooks" />

</androidx.constraintlayout.widget.ConstraintLayout>