<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/title_book_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:padding="3dp"
                android:text="Title" />

            <TextView
                android:id="@+id/author_booksale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@+id/title_book_sale"
                android:padding="3dp"
                android:text="Author" />

            <TextView
                android:id="@+id/desc_booksale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/author_booksale"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="Description" />

            <TextView
                android:id="@+id/category_booksale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc_booksale"
                android:layout_gravity="center"
                android:padding="3dp"
                android:text="Category" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>